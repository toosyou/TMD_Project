extends layout

block content
    .Content
        .Left_Content
            ul.Act-menu.animated
                if path
                    each p in path
                        li.has-children
                            input(type='checkbox',name='#{p.path.replace("/","")}', id='#{p.path.replace("/","")}')
                            label(for='#{p.path.replace("/","")}')= p.path.replace("/","")

        .Right_Content
            .Act_box
                .Box_container
                    .Box_img
                        img.box_img(src='/images/imgres.jpg')
                    .Box_info
                        h3 約跑
                        p  2015/10/25
                        p  新竹市，東區
                        .Box_des
                            p= token
                        a.button.button-block(href="/auth/login") 看全部你媽媽旦旦麵



